<%= form_for @song  do |f| %>
  <%= f.label :title %>

  <% if @song.artist.nil? %>
    <%= artist_id_field(@song) %>
  <% end %>

  <%= f.hidden_field :artist_id %>

  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
